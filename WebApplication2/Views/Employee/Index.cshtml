 <div  class="container">

     <h2>Employee Details</h2>


     <table>
         <thead>
             <tr>
                 <th>Id</th>
                 <th>Profile Picture</th>
                 <th>Name
                   
                 </th>
                

                 <th>Language</th>
                 <th>Country</th>
                 <th>Salary</th>
                 <th>Edit Records</th>
                 <th>Delete Records</th>
                 <th>Details</th>
                 <th>Status</th>
                 <th>Hide</th>


             </tr>
         </thead>

         <tbody>

             @foreach (var item in Model.EmployeeList)
             {

                 <tr>
                     <td>@item.Id</td>
                     <td><img class="display-image img-rounded" src="@(Common.Paths.GalleryRoot)@item.ImageUrl" /></td>
                     <td><a href="@(Common.MyRoot)Employee/Index?Id=@item.Id">@item.Name</a>
                         @if (@item.Status == "Activate")
                         {
                             <a href="@(Common.MyRoot)Employee/StatusUpdate?Id=@item.Id&status=true" id="double_activate" data-val="Deactivate" class="btn btn-success">@item.Status</a>
                         }
                         else
                         {
                             <a href="@(Common.MyRoot)Employee/StatusUpdate?Id=@item.Id&status=false" class="btn btn-danger">@item.Status</a>
                         }
                     </td>
                     <td>@item.Language</td>
                     <td>@item.Country</td>
                     <td>@item.INR</td>
                     <td><a href="@(Common.MyRoot)Employee/Edit?Id=@item.Id" class="btn btn-info"><i class="fa fa-edit"></i>Edit</a> </td>
                     <td><a href="@(Common.MyRoot)Employee/Delete?Id=@item.Id" class="btn btn-danger">Delete</a></td>
                     <td><a href="@(Common.MyRoot)Employee/Details?Id=@item.Id" class="btn btn-link" target="_blank">Details</a></td>
                     <td><a class="btn btn-success showInfo">@item.ActiveStatus</a></td>
                     <td><a class="btn btn-success hideInfo">Hide</a></td>

                 </tr>



             }

         </tbody>


     </table>

   

